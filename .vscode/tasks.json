{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build multicut",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-O3",
                "-g",
                "-o",
                "${workspaceFolder}/code/multicut",
                "${workspaceFolder}/code/Graph.cpp",
                "${workspaceFolder}/code/Multicut.cpp",
                "${workspaceFolder}/code/Image.cpp",
                "${workspaceFolder}/code/Decompressor.cpp",
                "${workspaceFolder}/code/Compressor.cpp",
                "${workspaceFolder}/code/main.cpp",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "`pkg-config",
                "--cflags",
                "--libs",
                "opencv4`"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}